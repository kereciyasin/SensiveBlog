@model Article


<div class="cover" style="background-image: url('@Model.CoverImageUrl');"></div>


<div class="meta">
    <span>Category <strong>@Model.CategoryId</strong></span>
    <span>Writer: <strong>@Model.CategoryId</strong></span>
    <span>Oluşturma Tarihi: <strong>@Model.CreatedDate.ToString("dd-MMM-yyyy")</strong></span>
</div>

<div class="content">
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>

</div>